<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/uiListImage"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/noimageavailable" />

    <TextView
        android:id="@+id/uiListPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/uiListImage"
        android:layout_alignStart="@+id/uiListTitle"
        android:layout_marginBottom="19dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/uiListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/uiListImage"
        android:text="TextView" />

</RelativeLayout>